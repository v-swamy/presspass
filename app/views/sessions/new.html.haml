.row
  .col-sm-10
    %h2 Login demo
.row
  .col-sm-10
    .well
      = bootstrap_form_tag url: '/sign_in' do |f|
        = f.alert_message "Please fix the errors below."
        %header
          %h4 Regular login
        = f.email_field :email
        = f.password_field :password
        = f.submit "Log In"
.row
  .col-sm-10
    .well
      = bootstrap_form_tag url: '/presspass/sign_in' do |f|
        = f.alert_message "Please fix the errors below."
        %header
          %h4 Regular login
        = f.email_field :email
        = f.password_field :password
        = f.submit "Log In With Presspass"
